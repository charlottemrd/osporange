                            <th> {{ form_label(form, 'Référence PV *', {
                                    'label_attr': {'class': 'input-group-text'}}) }}</th>
                            <th>{{ form_widget(form.refpv, {
                                    'label_attr': {'class': 'form_control'}}
                                ) }}</th>
                        </tr>

                        <tr>
                            <th> {{ form_label(form, 'Date PV *', {
                                    'label_attr': {'class': 'input-group-text'}}) }}</th>
