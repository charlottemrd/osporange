{% block body  %}
    <body class="d-flex flex-column">
    <main class="container-fluid flex-fill ">
        <br>
        <h1 class="text-center">Changement de phase </h1>
        <br>
        {{ form_start(form, {'attr': {'id': 'myForm'}}) }}
        <div id="smartwizard">

            <ul class="nav" >
                <li class="nav-item">
                    <a class="nav-link" href="#step-1">
                        Description
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#step-2">
                        Avancement
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#step-3">
                        Confirmation
                    </a>
                </li>

            </ul>

            <div class="tab-content" id="tab-content">
                <div id="step-1" class="tab-pane" role="tabpanel" aria-labelledby="step-1">
                    <table style="border-color: white;width:100%">

                        <tr style="border-color: white" >
                            <th width="15%">

                                {{ form_label(form, 'Phase *', {
                                    'label_attr': {'class': 'input-group-text'}}) }}</th>
                            <th  id="tore">
                                {{ form_widget(form.Phase, {
                                    'label_attr': {'class': 'form_control'}}
                                ) }}
                            </th>
                            <th style="padding-left: 1%"><label id="phasedf_Phase-error" class="error" for="phasedf_Phase"></label></th>
                    </table>

                </div>
                <div id="step-2" class="tab-pane" role="tabpanel" aria-labelledby="step-2">
                    <table>
                        <tr id="boxchoix20">
                            <td>Lors de la phase actuelle, y-a-t-il eu un retard lors de la date T2 ? *</td>
                            <th id="lors">{{ form_widget(form.choix20, {
                                    'label_attr': {'class': 'form_control'}}
                                ) }}</th>
                            <th  width="40%" style="padding-left: 1%"><label id="phasedf_choix20-error" class="error" for="phasedf_choix20"></label></th>
                        </tr>
                    </table>
                    <table style="border-color: white;width:100%">

                        <tr id="datereel2" style="display: none" >
                            <th width="15%"> {{ form_label(form, 'Date réelle T2 *', {
                                    'label_attr': {'class': 'input-group-text'}}) }}</th>
                            <th width="20%">{{ form_widget(form.datereel2, {
                                    'label_attr': {'class': 'form_control'}}
                                ) }}</th>
                            <th  width="50%" style="padding-left: 1%"><label id="phasedf_datereel2-error" class="error" for="phasedf_datereel2"></label></th>
                        </tr>
                        <br>
                    </table>




                </div>

                <div id="step-3" class="tab-pane" role="tabpanel" aria-labelledby="step-3">
                    <h4>  Veuillez vérifier vos données avant de soumettre le formulaire </h4>
                    <div id = "descriptionof " >
                        <h4>Description</h4>
                        <p id="newphase"> </p>
                    </div>
                    <div id = "avancementof" >
                        <h4>Avancement</h4>
                        <p id="datereel2of"> </p>
                    </div>

                </div>

            </div>
        </div>
        {#        </form>#}

        {{ form_end(form) }}
    </main>
    </body>


{% endblock  %}

