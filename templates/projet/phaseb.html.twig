{% block body  %}
    <body class="d-flex flex-column">
    <main class="container-fluid flex-fill ">
        <br>
        <h1 class="text-center">Changement de phase </h1>
        <br>
        {{ form_start(form, {'attr': {'id': 'myForm'}}) }}
        <div id="smartwizard">

            <ul class="nav" >
                <li class="nav-item">
                    <a class="nav-link" href="#step-1">
                        Changement de phase
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#step-2">
                        Avancement
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#step-3">
                        Planification
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#step-4">
                        Confirmation
                    </a>
                </li>

            </ul>

            <div class="tab-content" id="tab-content">
                <div id="step-1" class="tab-pane" role="tabpanel" aria-labelledby="step-1">
                    <div>Veuillez choisir la prochaine phase</div>
                    <table style="border-color: white;width:100%">

                        <tr style="border-color: white" >
                            <th width="15%">

                                {{ form_label(form, 'Phase *', {
                                    'label_attr': {'class': 'input-group-text'}}) }}</th>
                            <th  id="tore">
                                {{ form_widget(form.Phase, {
                                    'label_attr': {'class': 'form_control'}}
                                ) }}
                            </th>
                            <th style="padding-left: 1%"><label id="phaseb_Phase-error" class="error" for="phaseb_Phase"></label></th>
                    </table>
                </div>


                <div id="step-2" class="tab-pane" role="tabpanel" aria-labelledby="step-2">

                    <table>
                        <tr id="boxchoix1" style="display: table-row">
                            <td id="15%">Lors de la phase actuelle, y-a-t-il eu un retard lors de la date T-1 ? *</td>
                            <th id="tore">{{ form_widget(form.choix1, {
                                    'label_attr': {'class': 'form_control'}}
                                ) }}</th>
                            <th   style="padding-left: 1%"><label id="phaseb_choix1-error" class="error" for="phaseb_choix1"></label></th>
                        </tr>
                    </table>
                    <table style="border-color: white;width:100%">

                        <tr id="datereell1" style="display: none" >
                            <th width="15%"> {{ form_label(form, 'Date réelle T-1 *', {
                                    'label_attr': {'class': 'input-group-text'}}) }}</th>
                            <th id="tore">{{ form_widget(form.datereell1, {
                                    'label_attr': {'class': 'form_control'}}
                                ) }}</th>
                            <th  width="50%" style="padding-left: 1%"><label id="phaseb_datereell1-error" class="error" for="phaseb_datereell1"></label></th>
                        </tr>
                    <br>
                    </table>
                </div>


                <div id="step-3" class="tab-pane" role="tabpanel" aria-labelledby="step-3">
                    <div id="navdate" style="display: none" >
                        Pas de dates demandées
                        <br>
                        Vous pouvez passer à l'étape suivante
                    </div>
                    <table style="border-color: white;width:100%">

                        <tr id="date0" >
                            <th width="15%"> {{ form_label(form, 'Date T0 *', {
                                    'label_attr': {'class': 'input-group-text'}}) }}</th>
                            <th id="tore">{{ form_widget(form.date0, {
                                    'label_attr': {'class': 'form_control'}}
                                ) }}</th>
                            <th  width="50%" style="padding-left: 1%"><label id="phaseb_date0-error" class="error" for="phaseb_date0"></label></th>
                        </tr>
                        <tr>
                            <th> <p id="messerror1"></p></th>
                        </tr>

                    </table>
                </div>



                <div id="step-4" class="tab-pane" role="tabpanel" aria-labelledby="step-4">
                    <h4>  Veuillez vérifier vos données avant de soumettre le formulaire </h4>
                    <p id="newphase"> </p>
                    <p id="datel1reelop"> </p>
                    <p id="datel0op"> </p>
                </div>

            </div>
        </div>

        {{ form_end(form) }}
    </main>
    </body>


{% endblock  %}

