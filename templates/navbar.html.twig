
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/nav.css') }}" />
<style>
    @media (max-width:765px) {
        img#logo{
            width: 35%;
        }
        h1#logotitle{
            font-size: 30px;
        }
    }
</style>
{% endblock %}
<div class=" container-fluid bg-black nav-bar">
    <header class="blog-header py-3">
        <div class="row flex-nowrap justify-content-between align-items-center">
            <div class="col-4 " class="img-fluid">
                {% if is_granted('ROLE_USER') %}
                    <a  href="/projet"><img id="logo" src="/photo/logo_orange.jpg "  width="15%" height="15%" ></a>
                {% else %}
                    <img id="logo" src="/photo/logo_orange.jpg "  width="15%" height="15%" >
                {% endif %}
            </div>
            <div class="col-4 text-center">
                <h1 id="logotitle" class="text-white" >OSP</h1>
            </div>
            <div class="col-4 d-flex justify-content-end align-items-center">
                {% if is_granted('ROLE_USER') %}
                <div class="btn-group">
                    <div class="btn-group dropleft" role="group">
                        <button type="button" class="btn btn-lg btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="sr-only"></span>
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/projet/">Projets</a>
                            <a class="dropdown-item" href="/projet/new">Ajouter un projet</a>
                            <a class="dropdown-item" href="/bilanmensuel/">Bilan mensuels</a>
                            <a class="dropdown-item" href="/listemodalites/">Modalités</a>
                            <a class="dropdown-item" href="/pvinternes/">PVR internes</a>
                            <a class="dropdown-item" href="/fournisseur/liste">Fournisseurs</a>
                            <a class="dropdown-item" href="#">Aide</a>
                            <a class="dropdown-item" href="/logout">Déconnexion</a>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </header>
</div>
