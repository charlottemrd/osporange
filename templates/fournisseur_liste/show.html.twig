<body class="d-flex flex-column">
<main class="container-fluid flex-fill ">
    <h1 class="text-center">Fournisseur : {{ fournisseur.name }}</h1>
    <br>

    <div id="smartwizard">

        <ul class="nav" >
            <li class="nav-item">
                <a class="nav-link" href="#step-1">
                    Description
                </a>
            </li>


            <li class="nav-item">
                <a class="nav-link" href="#step-2">
                   Profils
                </a>
            </li>
        </ul>
        <div class="tab-content" id="tab-content">
            <div id="step-1" class="tab-pane" role="tabpanel" aria-labelledby="step-1">
                <div class="input-group mb-3" id="tocut">
                    <div class="input-group-prepend " style="width: 40%">
                        <span class="input-group-text" id="basic-addon1">Nom</span>
                    </div>
                    <input type="text" class="form-control"  style="background-color: white" placeholder="{{ fournisseur.name }}" disabled=true" aria-describedby="basic-addon1">
                </div>

                {%if fournisseur.fournisseurfullname!=null %}
                    <div class="input-group mb-3" id="tocut">
                        <div class="input-group-prepend " style="width: 40%">
                            <span class="input-group-text" id="basic-addon1">Interlocuteur</span>
                        </div>
                        <input type="text" class="form-control" style="background-color: white" placeholder="{{ fournisseur.fournisseurfullname }}" disabled=true" aria-describedby="basic-addon1">
                    </div>
                {% endif %}
                {%if fournisseur.phone!=null %}
                    <div class="input-group mb-3" id="tocut">
                        <div class="input-group-prepend " style="width: 40%">
                            <span class="input-group-text" id="basic-addon1">Numéro de téléphone</span>
                        </div>
                        <input type="text" class="form-control"  style="background-color: white" placeholder="{{ fournisseur.phone }}" disabled=true" aria-describedby="basic-addon1">
                    </div>
                {% endif %}

                {%if fournisseur.devise!=null %}
                    <div class="input-group mb-3" id="tocut">
                        <div class="input-group-prepend " style="width: 40%">
                            <span class="input-group-text" id="basic-addon1">Devise</span>
                        </div>
                        <input type="text" class="form-control"  style="background-color: white" placeholder="{{ fournisseur.devise }}" disabled=true" aria-describedby="basic-addon1">
                    </div>
                {% endif %}

                {%if fournisseur.mail!=null %}
                    <div class="input-group mb-3" id="tocut">
                        <div class="input-group-prepend " style="width: 40%">
                            <span class="input-group-text" id="basic-addon1">Adresse e-mail</span>
                        </div>
                        <input type="text" class="form-control"  style="background-color: white" placeholder="{{ fournisseur.mail }}" disabled=true" aria-describedby="basic-addon1">
                    </div>
                {% endif %}

                {%if fournisseur.adress!=null %}
                    <div class="input-group" id="tocut">
                        <div class="input-group-prepend " style="width: 40%">
                            <span class="input-group-text" id="basic-addon1">Adresse</span>
                        </div>
                        <textarea class="form-control" style="background-color: white"  disabled=true" placeholder="{{ fournisseur.adress }}" aria-label="With textarea"></textarea>
                    </div>
                {% endif %}
            </div>
            <div id="step-2" class="tab-pane" role="tabpanel" aria-labelledby="step-2">
                <p>Liste des profils :</p>
                <table id="couts" width="80%" style="margin-left: 10%" style="border: black 1px solid" >
                    <thead style="border: black 1px solid">
                    <tr style="border: black 1px solid">
                        <td width="10%" style="text-align: center;border-right: black solid 1px">
                            Nom
                        </td>
                        <td width="30%" style="text-align: center">
                            Montant
                        </td>
                    </tr>
                    </thead>
                    <tbody style="border: black 1px solid">
                    <tr>

                        {% for profil in profils %}
                    <tr>
                        <td width="10%" style="text-align: center;border: black 1px solid">
                            {{ profil.name}}
                        </td>
                        <td width="30%" style="text-align: center;border: black 1px solid">
                            {{ profil.tarif}}
                        </td>

                    </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">Pas de données trouvées</td>
                        </tr>
                    {% endfor %}
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        </div>


</main>
</body>
{% endblock %}
